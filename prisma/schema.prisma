generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model Form {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  temporal    Boolean
  timestamp   String?
  createdAt   String
  description String
  author      String
  lastUpdated String
  public      Boolean
  questions   Question[]
  answers   Answer[]
}

model Question {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  question    String
  type        String
  options     String[]
  required    Boolean
  formId      String    @db.ObjectId
  Form        Form?     @relation(fields: [formId], references: [id])
  answers      Answer[]
}

model Answer {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  formId      String    @db.ObjectId
  form        Form?     @relation(fields: [formId], references: [id])
  questionId  String    @db.ObjectId
  question    Question? @relation(fields: [questionId], references: [id])
  answer      String
  userId      String
  answeredAt   String
}
